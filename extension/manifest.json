{
  "manifest_version": 2,
  "name": "HTML5 LocalStorage Manager",
  "description": "Best localstorage chrome extension ever! Easy accessility and management to browser localstorage data. For every web developer.",
  "version": "1.2",
  "icons": { 
	"16": "icon-128.png",
	"48": "icon-128.png",
	"128": "icon-128.png" 
  },
  "page_action": {
	"default_title": "HTML5 LocalStorage Manager",
	"default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
	"tabs","storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    { "matches": ["http://*/*","https://*/*"], "js": ["inject.js"] }
  ],
  "web_accessible_resources": [
	"notification.html",
	"notification.js"
  ],
  "homepage_url": "http://andrelion.github.io/html5-localstorage-manager/",
  "options_page": "options.html"
}
